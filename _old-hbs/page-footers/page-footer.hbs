{{!-- fractal/components/page-footer.hbs --}}
<footer class="m-page-footer

    {{~#if pageFooterModifier}} m-page-footer--{{pageFooterModifier}}{{/if}}{{#each pageFooterContext.modifiers}} m-page-footer--{{this}}{{/each~}}

    {{~#if pageFooterClasses}} {{pageFooterClasses}}{{/if}}{{#each pageFooterContext.classes}} {{this}}{{/each}}">

    {{!-- Site Logos and Social Icons Bar --}}
    {{#> @page-section
            pageSectionContext=pageFooterContext.sections.siteLogosBar.pageSection
            pageSectionClasses="m-page-footer__site-logos-bar"}}
        {{> @site-logos-bar
                siteLogosBarContext=pageFooterContext.sections.siteLogosBar.siteLogosBar
                siteLogosBarClasses="m-page-footer__site-logos"}}
    {{/@page-section}}

    {{!-- Site Links and Social Icons Bar --}}
    {{#> @page-section
            pageSectionContext=pageFooterContext.sections.siteAboutBar.pageSection
            pageSectionClasses="m-page-footer__site-about-bar"}}
        {{> @site-about-bar
                siteAboutBarContext=pageFooterContext.sections.siteAboutBar.siteAboutBar
                siteAboutBarClasses="m-page-footer__site-about"}}
    {{/@page-section}}

    {{!-- Site Find a Doctor Search Bar --}}
    {{#> @page-section
            pageSectionContext=pageFooterContext.sections.siteFadBar.pageSection
            pageSectionClasses="m-page-footer__site-fad-bar l-hidden-xs"}}
        {{> @site-fad-bar
                siteFadBarContext=pageFooterContext.sections.siteFadBar.siteFadBar
                siteFadBarClasses="m-page-footer__site-fad"}}
    {{/@page-section}}

    {{!-- Site Disclaimer Bar --}}
    {{#> @page-section
            pageSectionContext=pageFooterContext.sections.siteDisclaimerBar.pageSection
            pageSectionClasses="m-page-footer__site-disclaimer-bar"}}
        {{> @site-disclaimer-bar
                siteDisclaimerBarContext=pageFooterContext.sections.siteDisclaimerBar.siteDisclaimerBar
                siteDisclaimerBarClasses="m-page-footer__site-disclaimer"}}
    {{/@page-section}}
</footer>